doctype html
html
  head
    title #{title}
    style
      include ../styles/style.css
      include ../styles/index.css

  body
    include header.pug
    div(class="container")
        div(class="card")
            h1 #{message}
            div.form-group
              input.form-control(type='text' id='countryInput' placeholder='Select a country' name='country')
              div(id='dropdown')
                each country in countries
                  a(class='select-item' href=`/country/${country.code}`) #{country.name}
    script
      include ../view_scripts/index.js
