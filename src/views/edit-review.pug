html
  head
    title #{title}
    style
      include ../styles/create-review.css
      include ../styles/style.css
  body
    include header.pug
    div(class="main-container")
      h1 Edit a Review for #{destName}
      div(class="content-container")
        div(class="editor-container")
          form(method='POST' action=`/review/create/${destinationId}` id='create-review')
            input(type='hidden' name='user' value=`${username}`)
            div.form-group
              label(for='title-editor') Title
              input.form-control(type='text' id='title-editor' placeholder='My tour of Paris!' name='title-editor' value=title)
            div.form-group
              textarea(id='editor' name='editor' form='create-review')
                | !{content}
            a(href=`/destination/${destination_id}${queryParams}`)
              button(type="button" class="btn edit-btn") Cancel
            button(type='submit' class="btn") Save
        div(class="preview" id="preview" )
    script
      include ../view_scripts/create-review.js
