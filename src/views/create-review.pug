html
  head
    title #{title}
    link(rel='icon' href='/images/logo/profile.png')
    style
      include ../styles/create-review.css
      include ../styles/style.css
  body
    include header.pug
    div(class="main-container")
      h1 Add a Review for #{destination}
      div(class="content-container")
        div(class="editor-container")
          form(method='POST' action=`/review/create/${destinationId}` id='create-review')
            div.form-group
              label(for='title') Title
              input.form-control(type='text' id='title' placeholder='My tour of Paris!' name='title')
            div.form-group
              textarea(id='content' name='content' form='create-review')
            a(href=`/destination/${destinationId}`)
              button(type="button" class="btn edit-btn") Cancel
            button(type='submit' class="btn") Create review
        div(class="preview" id="preview" )
    script
      include ../view_scripts/create-review.js
